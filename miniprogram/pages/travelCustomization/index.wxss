/* pages/travelCustomization/index.wxss */
.container {
  position: relative;
  background: #f8f8f8;
  z-index: 0;
}

.background {
  position: absolute;
  width: 100%;
  z-index: -1;
  filter: brightness(0.8);
  border-radius: 40rpx;
}

.header {
  margin-top: 240rpx;
  margin-left: 40rpx;
}

.title {
  margin-bottom: 10rpx;
  color: #fff;
  font-size: 60rpx;
  font-weight: 600;
}

.intro {
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}

.custom {
  margin: 70rpx 20rpx 40rpx;
  background: #fff5d6;
  border: 4rpx solid #fff;
  border-radius: 20rpx;
}

.custom-header {
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  height: 60rpx;
}

.custom-header-label {
  display: flex;
  align-items: center;
  color: #926538;
  font-size: 24rpx;
  font-weight: 600;
}

.custom-header-ear {
  width: 30rpx;
  height: 30rpx;
}

.custom-header-ear-right {
  width: 30rpx;
  height: 30rpx;
  transform: scaleX(-1);
}

.custom-header-title {
  margin-left: 10rpx;
  color: #ac7c4d;
  font-size: 20rpx;
}

.custom-header-arrow {
  width: 30rpx;
  height: 30rpx;
}

.custom-content {
  padding: 0 20rpx;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
}

.custom-content-title-cus {
  padding-top: 40rpx;
  margin-bottom: 20rpx;
  color: #a8a8a8;
  font-size: 24rpx;
}

.custom-content-title-hot {
  margin-top: 60rpx;
  margin-bottom: 48rpx;
  color: #a8a8a8;
  font-size: 24rpx;
}

.custom-content-search {
  display: flex;
  align-items: center;
  padding-left: 26rpx;
  height: 120rpx;
  border: 2rpx solid #181a1c;
  border-radius: 30rpx;
  font-size: 36rpx;
  font-weight: 600;
}

.custom-comtent-search-arrow {
  margin-right: 30rpx;
  width: 46rpx;
  height: 46rpx;
}

.custom-content-hot {
  display: flex;
  margin-bottom: 36rpx;
}

.custom-content-hot-label {
  position: relative;
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  padding: 10rpx 30rpx;
  background: #f5f6f7;
  color: #0B0B0B;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.hot-first {
  position: absolute;
  top: -36rpx;
  left: 10rpx;
  padding: 4rpx 6rpx;
  background: #feedcf;
  color: #ae915c;
  border-radius: 12rpx 12rpx 0 0;
  font-size: 20rpx;
  font-weight: 600;
  white-space: nowrap;
}

.fire {
  margin-right: 4rpx;
  width: 26rpx;
  height: 26rpx;
}

.custom-content-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  background: #c79f64;
  color: #fff;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 400;
}

.custom-content-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  padding-bottom: 40rpx;
  color: #a3a4a5;
  font-size: 24rpx;
  text-align: center;
}

.custom-content-tip-avatar {
  margin-right: 8rpx;
  width: 50rpx;
  height: 50rpx;
}

.custom-content-tip-schema {
  color: #caa56b;
}

.hot-tab {
  display: flex;
  padding: 0 20rpx;
}

.hot-tab-item {
  display: flex;
  align-items: center;
  padding: 14rpx 30rpx;
  color: #5d5f60;
  border-radius: 26rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.hot-tab-item-star-active {
  color: #191a1c;
  background: #e9ff56;
}

.hot-tab-item-star {
  width: 46rpx;
  height: 46rpx;
}

.dark {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
}

.cus-model {
  width: 600rpx;
  height: 700rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  overflow: hidden;
  background: linear-gradient(to bottom, #fff4e5, #ffffff);
  border-radius: 48rpx;
  transform: translate(-50%, -50%);
}

.cus-background-star {
  position: absolute;
  left: -20rpx;
  top: 40rpx;
  width: 240rpx;
  height: 240rpx;
  z-index: -1;
}

.cus-model-title-container {
  margin-top: 120rpx;
}

.cus-model-title {
  margin-left: 50rpx;
  font-size: 36rpx;
  font-weight: 600;
}

.cus-model-title-name {
  color: #c8a063;
}

.cus-model-content {
  margin-top: 50rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  height: 300rpx;
  color: #c89f63;
  font-size: 30rpx;
}

.cus-model-content-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.cus-model-right {
  flex-shrink: 0;
  margin-top: 6rpx;
  margin-right: 16rpx;
  width: 30rpx;
  height: 30rpx;
}

.cus-model-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  width: 500rpx;
  height: 88rpx;
  background: #c8a063;
  color: white;
  font-size: 28rpx;
  border-radius: 16rpx;
}